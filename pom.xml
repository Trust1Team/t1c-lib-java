                    </sourcePaths>
                    <excludes></excludes>
                    <targetPackage>com.t1t.t1c.model.rest</targetPackage>
                    <sourceType>jsonschema</sourceType>
                    <annotationStyle>gson</annotationStyle>
                    <generateBuilders>true</generateBuilders>
